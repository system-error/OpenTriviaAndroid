<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuizScore">

    <TextView
        android:id="@+id/titleView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="174dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="175dp"
        android:text="Total Score"
        app:layout_constraintBottom_toTopOf="@+id/textForEndGame"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textForEndGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="48dp"
        app:layout_constraintBottom_toTopOf="@+id/answersView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleView" />

    <TextView
        android:id="@+id/answersView"
        android:layout_width="260dp"
        android:layout_height="18dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="52dp"
        android:text="The total number of correct answers are: "
        app:layout_constraintBottom_toTopOf="@+id/textForScoreView"
        app:layout_constraintEnd_toStartOf="@+id/answeredView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textForEndGame" />

    <TextView
        android:id="@+id/answeredView"
        android:layout_width="26dp"
        android:layout_height="17dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="52dp"
        android:layout_marginBottom="39dp"
        app:layout_constraintBottom_toTopOf="@+id/textForScoreView"
        app:layout_constraintEnd_toStartOf="@+id/dashView"
        app:layout_constraintStart_toEndOf="@+id/answersView"
        app:layout_constraintTop_toBottomOf="@+id/textForEndGame" />

    <TextView
        android:id="@+id/dashView"
        android:layout_width="6dp"
        android:layout_height="17dp"
        android:layout_marginTop="52dp"
        android:layout_marginBottom="39dp"
        android:text="/"
        app:layout_constraintBottom_toTopOf="@+id/scoreView"
        app:layout_constraintEnd_toStartOf="@+id/answsersView"
        app:layout_constraintStart_toEndOf="@+id/answeredView"
        app:layout_constraintTop_toBottomOf="@+id/textForEndGame"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/answsersView"
        android:layout_width="26dp"
        android:layout_height="17dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="55dp"
        android:layout_marginBottom="39dp"
        app:layout_constraintBottom_toTopOf="@+id/textForScoreView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/dashView"
        app:layout_constraintTop_toBottomOf="@+id/textForEndGame" />

    <TextView
        android:id="@+id/textForScoreView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="39dp"
        android:layout_marginBottom="380dp"
        android:text="Your score is: "
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/scoreView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/answersView" />

    <TextView
        android:id="@+id/scoreView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="23dp"
        android:layout_marginTop="39dp"
        android:layout_marginEnd="175dp"
        android:layout_marginBottom="382dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textForScoreView"
        app:layout_constraintTop_toBottomOf="@+id/answersView" />


</androidx.constraintlayout.widget.ConstraintLayout>